<Window x:Class="FYMS.CSVIEW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
        xmlns:ctl="clr-namespace:FYMS.CSVIEW"
        Title="FYMS-房源管理系统" Height="800" Width="1000"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        FontFamily="Microsoft YaHei"
        WindowStyle="None"
        AllowsTransparency="True" 
        BorderThickness="24"
        WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TreeView.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>
    <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <DockPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <materialDesign:ColorZone Mode="Standard" Margin="0,0,0,0" Grid.Column="0">
                    <DockPanel x:Name="docvisible" Visibility="Collapsed" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            
                            <TreeView Grid.Row="1" FontSize="15" Margin="20" FontWeight="Bold" MinWidth="220">
                                <TreeViewItem >
                                    <TreeViewItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <Viewbox  Width="16"  Height="16">
                                                <materialDesign:PackIcon  Kind="ClipboardUser"  />
                                            </Viewbox>
                                            <TextBlock Margin="8 0 0 0"> 水果</TextBlock>
                                        </StackPanel>
                                    </TreeViewItem.Header>
                                    <TreeViewItem>
                                        <TreeViewItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Viewbox  Width="16"  Height="16">
                                                    <Canvas  Width="24"  Height="24">
                                                        <Path  Data="M20,10C22,13 17,22 15,22C13,22 13,21 12,21C11,21 11,22 9,22C7,22 2,13 4,10C6,7 9,7 11,8V5C5.38,8.07 4.11,3.78 4.11,3.78C4.11,3.78 6.77,0.19 11,5V3H13V8C15,7 18,7 20,10Z"   Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock Margin="8 0 0 0"> Apple</TextBlock>
                                            </StackPanel>
                                        </TreeViewItem.Header>
                                    </TreeViewItem>
                                    <TreeViewItem Header="Banana" />
                                    <TreeViewItem Header="Grape">
                                        <TextBlock> <Run Text="Grapes for us" /></TextBlock>
                                    </TreeViewItem>
                                    <TreeViewItem  Header="Peach" />
                                    <TreeViewItem  Header="Pear" />
                                    <TreeViewItem  Header="Strawberry" />
                                </TreeViewItem>
                                <TreeViewItem  Header="OS" IsExpanded="True">
                                    <TreeViewItem   Header="Amiga" />
                                    <TreeViewItem>
                                        <TreeViewItem.Header>
                                            <StackPanel   Orientation="Horizontal">
                                                <Viewbox   Width="16"  Height="16">
                                                    <materialDesign:PackIcon  Kind="ClipboardUser" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                                                </Viewbox>
                                                <TextBlock Margin="8 0 0 0">   Android
                                                </TextBlock>
                                            </StackPanel>
                                        </TreeViewItem.Header>
                                    </TreeViewItem>
                                    <TreeViewItem Header="iOS" />
                                    <TreeViewItem>
                                        <TreeViewItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Viewbox  Width="16"  Height="16">
                                                    <Canvas  Width="24"   Height="24">
                                                        <Path
                Data="M13.18,14.5C12.53,15.26 11.47,15.26 10.82,14.5L7.44,10.5C7.16,11.28 7,12.12 7,13C7,14.67 7.57,16.18 8.5,17.27C10,17.37 11.29,17.96 11.78,19C11.85,19 11.93,19 12.22,19C12.71,18 13.95,17.44 15.46,17.33C16.41,16.24 17,14.7 17,13C17,12.12 16.84,11.28 16.56,10.5L13.18,14.5M20,20.75C20,21.3 19.3,22 18.75,22H13.25C12.7,22 12,21.3 12,20.75C12,21.3 11.3,22 10.75,22H5.25C4.7,22 4,21.3 4,20.75C4,19.45 4.94,18.31 6.3,17.65C5.5,16.34 5,14.73 5,13C4,15 2.7,15.56 2.09,15C1.5,14.44 1.79,12.83 3.1,11.41C3.84,10.6 5,9.62 5.81,9.25C6.13,8.56 6.54,7.93 7,7.38V7A5,5 0 0,1 12,2A5,5 0 0,1 17,7V7.38C17.46,7.93 17.87,8.56 18.19,9.25C19,9.62 20.16,10.6 20.9,11.41C22.21,12.83 22.5,14.44 21.91,15C21.3,15.56 20,15 19,13C19,14.75 18.5,16.37 17.67,17.69C19.05,18.33 20,19.44 20,20.75M9.88,9C9.46,9.5 9.46,10.27 9.88,10.75L11.13,12.25C11.54,12.73 12.21,12.73 12.63,12.25L13.88,10.75C14.29,10.27 14.29,9.5 13.88,9H9.88M10,5.25C9.45,5.25 9,5.9 9,7C9,8.1 9.45,8.75 10,8.75C10.55,8.75 11,8.1 11,7C11,5.9 10.55,5.25 10,5.25M14,5.25C13.45,5.25 13,5.9 13,7C13,8.1 13.45,8.75 14,8.75C14.55,8.75 15,8.1 15,7C15,5.9 14.55,5.25 14,5.25Z"
                Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock  Margin="8 0 0 0">  Linux
                                                </TextBlock>
                                            </StackPanel>
                                        </TreeViewItem.Header>
                                    </TreeViewItem>
                                    <TreeViewItem>
                                        <TreeViewItem.Header>
                                            <StackPanel  Orientation="Horizontal">
                                                <Viewbox   Width="16"   Height="16">
                                                    <Canvas   Width="24"   Height="24">
                                                        <Path
                Data="M3,12V6.75L9,5.43V11.91L3,12M20,3V11.75L10,11.9V5.21L20,3M3,13L9,13.09V19.9L3,18.75V13M20,13.25V22L10,20.09V13.1L20,13.25Z"
                Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Foreground}" />
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock  Margin="8 0 0 0">  Windows
                                                </TextBlock>
                                            </StackPanel>
                                        </TreeViewItem.Header>
                                    </TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="Empty" />
                            </TreeView>

                        </Grid>
                    </DockPanel>
                </materialDesign:ColorZone>
            </ScrollViewer>
            <materialDesign:ColorZone  Margin="0,0,0,0"  Padding="16"   Mode="Standard" DockPanel.Dock="Top">
                <DockPanel>
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False"
                                        x:Name="MenuToggleButton" Checked="MenuToggleButton_Checked" Click="MenuToggleButton_Click"/>
                    <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                        <StackPanel>
                            <Button  Click="Button_Max_Click" ToolTip="最大化">
                                <materialDesign:PackIcon Kind="FormatVerticalAlignTop" />
                            </Button>
                            <Separator/>
                            <Button  Click="Button_Min_Click" ToolTip="最小化">
                                <materialDesign:PackIcon  Kind="FormatVerticalAlignBottom" />
                            </Button>
                            <Separator/>
                            <Button  Click="Button_ReSize_Click"  ToolTip="初始大小">
                                <materialDesign:PackIcon  Kind="FormatVerticalAlignCentre"  />
                            </Button>
                            <Separator/>
                            <Button  ToolTip="重新登录" Click="Button_ReLogin_Click">
                                <materialDesign:PackIcon  Kind="Recycle" />
                            </Button>
                            <Separator/>
                            <Button  Click="Button_Close_Click" ToolTip="关闭">
                                <materialDesign:PackIcon  Kind="Close" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                            </Button>
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22">FYMS</TextBlock>
                    <Button Click="Button_Click_1">
                        <materialDesign:PackIcon Kind="AllInclusive" />
                    </Button>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <materialDesign:PackIcon  Kind="Company" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                        <TextBlock FontSize="14" FontWeight="Bold">公司名称</TextBlock>
                        <TextBlock FontSize="14" Width="20" FontWeight="Bold"></TextBlock>
                        <materialDesign:PackIcon  Kind="AccountBox" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                        <TextBlock FontSize="14" FontWeight="Bold">人员名称</TextBlock>
                        <TextBlock FontSize="14" Width="20" FontWeight="Bold"></TextBlock>
                        <materialDesign:PackIcon  Kind="ClipboardUser" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                        <TextBlock FontSize="14" FontWeight="Bold">人员角色</TextBlock>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <materialDesign:ColorZone  Padding="16" 
                                            Mode="Light" DockPanel.Dock="Bottom">
                <DockPanel>
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False"
                                        x:Name="MenuToggleButton1" Checked="MenuToggleButton1_Checked" Click="MenuToggleButton1_Click"/>
                    <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                        <StackPanel>
                            <Button  Click="Button_Max_Click" ToolTip="最大化">
                                <materialDesign:PackIcon Kind="FormatVerticalAlignTop" />
                            </Button>
                            <Separator/>
                            <Button  Click="Button_Min_Click" ToolTip="最小化">
                                <materialDesign:PackIcon  Kind="FormatVerticalAlignBottom" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                            </Button>
                            <Separator/>
                            <Button  Click="Button_ReSize_Click"  ToolTip="初始大小">
                                <materialDesign:PackIcon  Kind="FormatVerticalAlignCentre" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                            </Button>
                            <Separator/>
                            <Button  Click="Button_Close_Click" ToolTip="关闭">
                                <materialDesign:PackIcon  Kind="Close" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" />
                            </Button>
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <TextBlock x:Name="clock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12">FYMS-房源管理系统</TextBlock>
                </DockPanel>
            </materialDesign:ColorZone>
            <Grid>


                <!--<ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="{Binding ElementName=DemoItemsListBox, Path=SelectedItem.HorizontalScrollBarVisibilityRequirement}"
                                  VerticalScrollBarVisibility="{Binding ElementName=DemoItemsListBox, Path=SelectedItem.VerticalScrollBarVisibilityRequirement}" 
                                  Padding="{Binding ElementName=DemoItemsListBox, Path=SelectedItem.MarginRequirement}">
                        <ContentControl Content="{Binding ElementName=DemoItemsListBox, Path=SelectedItem.Content}" />
                    </ScrollViewer>-->

                <TabControl x:Name="MainTab" Margin="10" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Tag="100">

                </TabControl>
                <!--<materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="MainSnackbar"
                                             Grid.Row="1" />-->
            </Grid>
        </DockPanel>
        <!--</materialDesign:DrawerHost>-->
    </materialDesign:DialogHost>
</Window>
